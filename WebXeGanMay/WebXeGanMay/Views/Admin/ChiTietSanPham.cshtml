@model WebXeGanMay.Models.XEGANMAY

@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
<h2>Thông tin chi tiết</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Tên xe
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenXe)
        </dd>

        <dt>
           Giá Bán
        </dt>

        <dd>
                @string.Format("{0:0,0}",Model.Giaban) VNĐ
        </dd>

        <dt>
         Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mota)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            <img src="~/content/Images/XE/@Model.Anhbia" style="width:200px" />
        </dd>

        <dt>
            Ngày cập nhật
        </dt>

        <dd>
           @string.Format("{0:dd/MM/yyyy}", Model.Ngaycapnhat)
        </dd>

        <dt>
            Số lượng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluongton)
        </dd>

        <dt>
           Loại xe
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LOAIXE.TenLoaiXe)
        </dd>

        <dt>
            Nhà phân phối
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NHAPHANPHOI.TenNPP)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "SuaXeMay", new { id = Model.MaXe }) |
    @Html.ActionLink("Trở về", "XeMay")
</p>
</div>